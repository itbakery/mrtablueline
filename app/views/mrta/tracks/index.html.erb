<%- model_class = Track -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Project Name </th>
      <th><%= model_class.human_attribute_name(:atmonth) %></th>
      <th><%= model_class.human_attribute_name(:projection) %></th>
      <th><%= model_class.human_attribute_name(:actual) %></th>
      <th><%= model_class.human_attribute_name(:reportnote) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.project.name %></td>
        <td><%= track.atmonth %></td>
        <td><%= track.projection %></td>
        <td><%= track.actual %></td>
        <td><%= track.reportnote %></td>
        <td><%=l track.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mrta_track_path(track), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mrta_track_path(track),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mrta_track_path,
            :class => 'btn btn-primary' %>
