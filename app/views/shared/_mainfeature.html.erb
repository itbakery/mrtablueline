<div class="flex-container">
  <div id="mainflexslider" class="flexslider">
    <ul class="slides">
      <% @activities.in_groups_of(1,false) do |row_activity|  %>
        <li>
          <% row_activity.each do |activity| %>
            <div class="content">
                <% doc = Nokogiri::HTML(activity.ntent) %>
                <% img_srcs = doc.css('img').map{ |i| i['src'] } %>
                <p class="crop">
                  <img src=<%=img_srcs.first %>  />
                </p>
                <p class="flex-caption">
                  <%= link_to activity.title, activity_path(activity), :class => "featurefont" %>
                </p>
            </div>
          <% end %>
        </li>
      <% end  %>
    </ul>
  </div>
</div>
