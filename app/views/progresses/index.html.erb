<div class="span4" style="margin-top: 5px;">
  <div style="padding: 8px 0;" class="well">
    <ul class="nav nav-list">
      <li class="nav-header"><h4>รายชื่อสถานีรถไฟฟ้า</h4></li>
      <% if @stations %>
        <% @stations.each_with_index   do |station,index|%>
          <li style="line-height: 2em;">
            <div style="float: left; width: 60%">
              <a href="/progresses/station/<%= station.id %>" class="menuheader"><%= index +1  %>).<%= station.name %></a>
            </div>
            <div class="pull-right">
              <button class="btn btn-small btn-warning" type="button"> <%= station.reports.count%>  </button>
            </div>
          </li>
        <% end %>
      <% end %>
      <div style="clear: both;"></div>

    </ul>
  </div>
</div><!--/span-->

<div class="span8" style="margin-top: 5px;">
  <p id="notice"><%= notice %>
  <h4> รายงานความคืบหน้าโครงการประจำ <%= @station.name  %> </h4>
  <table class="table table-bordered">
    <tr>
      <th style="width: 10%">ลำดับ</th>
      <th style="width: 50%">รายงาน</th>
      <th style="width: 20%">สถานี</th>
      <th style="width: 20%">จำนวนที่อ่าน/ip ล่าสุด</th>
    </tr>
    <% if @reports %>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.created_at.strftime("%m/%d/%Y") %></td>
          <td><a href="/progresses/report/<%= report.id %>"><%= report.title %></a></td>
          <td><%= @station.name %></td>
          <td><%= report.hit_count %> ครั้ง,<%= report.hits.last.user_ip if report.hits.last %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>
